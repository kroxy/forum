#pages
  .panel.panel-default
    .panel-header
      %h2=@post.title
    .panel-body
      - if @post.image.present?
        .col-md-2
          =image_tag @post.image.url(:medium)
        .col-md-10
          =@post.content
      -else
        =@post.content
      #comments
        %h2=@post.comments.count
        %p
        hozzászolás
        =render @post.comments
        %h2 Szóljon hozzá Ön is a témához!
        =render 'comments/form'
