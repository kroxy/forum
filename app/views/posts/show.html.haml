#pages
  .panel.panel-default
    .panel-header
      %h2=@post.title
    .panel-body
      .row
      - if @post.image.present?
        .col-lg-2.col-md-4.col-sm-6.col-xs-12
          =image_tag @post.image.url(:medium)
        .col-lg-10.col-md-8.col-sm-6
          %p=simple_format(@post.content)
      -else
        %p=simple_format(@post.content)
      .col-md-12
        .btn-group.pull-right
          =link_to like_post_path(@post),method: :put,class: "btn btn-default" do
            %span.glyphicon.glyphicon-heart
              =@post.get_upvotes.size
      .row
      %h2=@post.comments.count
      %p
      hozzászolás
      =render @post.comments
      %h2 Szóljon hozzá Ön is a témához!
      =render 'comments/form'
