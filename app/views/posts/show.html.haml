#post_content
  %h1=@post.title
  %p=@post.content

  #comments
    %h2=@post.comments.count
    =render 'comments/comments'
    %h3 reply to thread
    =render 'comments/form'

  =link_to "Edit",edit_post_path(@post)
  =link_to "Home",posts_path
  =link_to "Delete",post_path(@post), method: :delete, data:{confirm:"Are you shure?"}