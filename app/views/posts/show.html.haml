#pages
  .panel.panel-default
    .panel-header
      %h2=@post.title
    .panel-body
      .row
      - if @post.image.present?
        .col-lg-3.col-md-4.col-sm-6.col-xs-12
          =image_tag @post.image.url(:medium)
        .col-lg-9.col-md-8.col-sm-6
          %p=@post.content
      -else
        %p=@post.content
      .row
      %h2=@post.comments.count
      %p
      hozzászolás
      =render @post.comments
      %h2 Szóljon hozzá Ön is a témához!
      =render 'comments/form'
