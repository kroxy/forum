#pages
  .panel.panel-default
    .panel-header
      %h2=@post.title
    .panel-body
      .row.col-lg-12
      - if @post.imagess.present?
        =image_tag @post.imagess.large_image,id:"mediumimage"
        %p=simple_format(@post.content)
      -else
        %p=simple_format(@post.content)
      .col-md-12
        .btn-group.pull-right
          =link_to like_post_path(@post),method: :put,class: "btn btn-default" do
            %span.glyphicon.glyphicon-heart
              =@post.get_upvotes.size
      .row
      %h2=@post.comments.count
      %p
      hozzászolás
      =render @post.comments
      %h2 Szóljon hozzá Ön is a témához!
      =render 'comments/form'
