#commentform
  =simple_form_for @post, html: { multipart:true } do |f|
    .form-group
      = f.input :image
    .form-group
      = f.input :title,label: 'Az új belegyzés cime', autofocus: true, input_html: { class: 'form-control'}
    .form-group
      = f.input :content, label:'Az új bejegyzés szövege', input_html: { class: 'form-control',rows:"14"}
    .form-group
    .navbar-right
      = f.button :submit, 'Új téma indítása', class: "btn-default"
